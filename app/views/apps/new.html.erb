<h1>Create a listing</h1>
<div>
<%= form_for @app, url: {action: "create"} do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :Short_Description %>
    <%= f.text_field :blurb %>
  </div>
  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>
  <div class="form-group">
    <%= f.label :App_Icon %>
    <%= f.file_field :icon %>
  </div>
  <div class="form-group">
    <%= f.label :Extended_Description %>
    <%= f.text_area :description %>
  </div>
  <div class="form-group">
    <%= f.label :App_Screenshots %>
    <%= f.file_field :images, multiple: true %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
</div>