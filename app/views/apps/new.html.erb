<h1>Create a Listing</h1>

<div class="container">
  <form action="<%= new_app_path %>" method="POST">
    <input type="hidden" value="<%= form_authenticity_token %>" name= "authenticity_token" />
    
    <label for="name">Name of App</label>
    <input type="text" id="name" placeholder="Name of App..">

    <label for="store">Store name</label>
    <input type="text" id="store" placeholder="Store name..">

    <label for="details">Description</label>
    <textarea id="details" placeholder="App description.." style="height:200px"></textarea>
    
    <select name="genre">
      <option value="selectgenre" disabled="disabled">Select Genre:</option>
      <option value="Book">Book</option>
      <option value="Business">Business</option>
      <option value="Education">Education</option>
      <option value="Entertainment">Entertainment</option>
      <option value="Finance">Finance</option>
      <option value="Food">Food & Drink</option>
      <option value="Games">Games</option>
      <option value="Health">Health</option>
      <option value="Magazines">Magazines</option>
      <option value="Music">Music</option>
      <option value="News">News</option>
      <option value="Sports">Sports</option>
    </select>

    <label for="name">Name</label>
    <input type="text" id="name" placeholder="Name of listing..">
    
    <label>Upload App Icon</label>
    <input type="file" name="uploaded_app" accept="image/png, image/jpeg" />

    <label>Upload Screenshots</label>
    <input type="file" name="uploaded_app" accept="image/png, image/jpeg" />

    <input type="submit" value="Create" />
  </form>
</div>
<div class="footer">
</div>

