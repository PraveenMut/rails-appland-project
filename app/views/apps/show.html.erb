<div class="container-column">
  <div class="image-container">
    <% if @app.icon.attached? %>
    <%= image_tag(@app.icon, :size =>"80x80") %>
    <% end %>
  </div>
  <div class="main-header">
    <h1><%= @app.name %> <span>by <%= @app.store.name %></span></h1>
    <h2><%= @app.blurb %></h2>
    <h2><%= number_to_currency(@app.price) %></h2>
    <% unless current_user.store.apps.include?(@app)  %>
    <%= render "layouts/shared/stripe_form" %>
    <% end %>
   <p class="desc"><%= @app.description %></p>
    </div>
  </div>
<div class="container-column">
  <div class="image-container">
    <% @app.images.each do |image| %>
    <%= image_tag(image, :size =>"180x260") %>
    <% end %>
  </div>
  <div class="container">
    <% if @app.store.user == current_user %>
    
    <%= link_to 'Edit Listing', edit_app_path(@app.id), :class => "btn btn-primary float-left"  %>
    <%= link_to 'Delete Listing', app_path(@app.id), :method => :delete, :class => "btn btn-danger float-right", :data => { confirm: "Are you sure?" } %>
    <% end %>
</div>