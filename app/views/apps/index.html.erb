<h1>App Library</h1>
<% @apps.each do |app| %>
<div class="app-listing">

<div class="container">
  <div class="card-deck mb-3 text-center">
    <div class="card mb-4 shadow-sm">
      <div class="card-header">
        <h4 class="my-0 font-weight-normal">app name</h4>
      <div class="card-body">
        <h1 class="card-title pricing-card-title">$5 <small class="text-muted">/ mo</small></h1>
        <ul class="list-unstyled mt-3 mb-4">
        <%= app.name %>
        <%= app.description %>
        <%= app.price %>
        <%= app.store.name %>
        <%= link_to 'Show Listing', app_path(app.id) %>
        <% if app.store.user == current_user %>
        <%= link_to 'Edit Listing', edit_app_path(app.id) %>
        <% end %>
        </ul>
        <button type="button" class="btn btn-lg btn-primary">More Details</button>
      </div>
    </div>
  </div>
</div>